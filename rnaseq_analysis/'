import os

def add_berkid(berkid, fpkm_path, berkid_fpkm_path):
    '''adds the berkid to the last columns of an
    fpkm file output by cufflinks.
    '''
    with open(berkid_fpkm_path, 'w') as g:
        with open(fpkm_path, 'r') as f:
            next(f)
            for l in f:
                newline = l.strip('\n') + '\t{0}\n'.format(berkid)
                g.write(newline) 

berkid = 'RGAM009D'
fpkm_path = '/home/andrea/bookmarks/analysis/results_tophat/RGAM009D/tophat_out/htseq_results_edit.txt'
berkid_fpkm_path = '/home/andrea/bookmarks/analysis/results_tophat/RGAM009D/tophat_out/htseq_results_edit_berkid.txt'

add_berkid(berkid, fpkm_path, berkid_fpkm_path)
